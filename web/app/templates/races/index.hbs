<div class="row">

<div class="col-md-9">
  {{pie-chart data=chartData maxNumberOfSlices=100 minSlicePercent=0 sortKey='label'}}
</div>

<div class="col-md-3">
  <form>
    <div class="form-group">
      {{select-2 content=model.races value=filterByRace optionLabelPath='name' placeholder="Filter by Race" allowClear=true}}
    </div>
    <div class="checkbox">
      <label>
        {{input type='checkbox' checked=splitByClan}}
        Split by Clan
      </label>
    </div>
    <div class="checkbox">
      <label>
        {{input type='checkbox' checked=splitByGender}}
        Split by Gender
      </label>
    </div>
  </form>

  <hr />

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th width="10%">Members</th>
      </tr>
    </thead>
    <tbody>
      {{#each data as |d|}}
      <tr>
        <td>
          {{d.race.name}} {{#if d.gender}}{{d.gender.symbol}}{{/if}}
          {{#if d.clan}}<small class="show">{{d.clan.name}}</small>{{/if}}
        </td>
        <td>{{d.num_characters}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

</div>
