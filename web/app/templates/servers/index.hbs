<div class="row">

<div class="col-md-9">
  {{pie-chart data=chartData maxNumberOfSlices=100}}
</div>

<div class="col-md-3">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th width="10%">Population</th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedServers as |server|}}
      <tr>
        <td class="one-link">{{#link-to 'servers.show' server}}{{server.name}}{{/link-to}}</td>
        <td>{{server.population}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

</div>
